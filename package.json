{
  "name": "ims-tech-auto",
  "version": "1.0.1",
  "description": "this is imstech auto program",
  "main": "./dist/src/index.js",
  "type": "module",
  "author": "lidong",
  "license": "MIT",
  "private": true,
  "build": {
    "appId": "org.github.imstech",
    "productName": "ImsTechAuto",
    "icon": "assets/icon.ico",
    "files": [
      "dist/src/**/*.js",
      "node_modules/**/*",
      "package.json",
      "!**/.cookies.txt",
      "!**/test-results",
      "!**/tests"
    ],
    "win": {
      "target": "portable",
      "artifactName": "${productName}.${ext}"
    }
  },
  "scripts": {
    "build": "tsc -b core && tsc",
    "start:electron": "yarn build && electron ./dist/src",
    "build:electron": "yarn build && electron-builder"
  },
  "workspaces": [
    "core"
  ],
  "devDependencies": {
    "@electron/fuses": "^1.8.0",
    "@playwright/test": "^1.48.1",
    "@types/node": "^22.9.0",
    "electron": "^33.2.0",
    "electron-builder": "^26.0.12",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@ims-tech-auto/core": "^1.0.0",
    "playwright": "^1.44.0",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "source-map-support": "^0.5.21"
  }
}
